<!DOCTYPE html>
<html>
<head>
  <title>MySQL Dashboard</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css">
  <style>
    body {
      display: flex;
      min-height: 100vh;
      margin: 0;
    }
    .sidebar {
      width: 250px;
      background-color: #f8f9fa;
      padding: 20px;
      border-right: 1px solid #ddd;
    }
    .content {
      flex-grow: 1;
      padding: 20px;
      overflow-y: auto;
    }
  </style>
</head>
<body>
  <div class="sidebar">
    <h4 title="database schema name"><%= databaseName %></h4>
    <a href="diagram" target="_blank" class="btn btn-primary btn-sm" >Diagram</a>

    <h5>Tables</h5>    
    <ul id="tableList" class="list-group">
      <!-- Table list will be dynamically loaded here -->
    </ul>
  </div>
  <div class="content">
      <div id="mainContent">
        <!-- Default content -->
        <h2>Welcome to MySQL Dashboard</h2>
        <p>Select a table from the sidebar to browse its data or view its details.</p>
      </div>    
  </div>

  <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
  <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
  <script>
  $(document).ready(function () {
    // Fetch the list of tables
    $.get('/tables-data', function (data) {
      if (data && data.data) {
        data.data.forEach(table => {
          $('#tableList').append(`
            <li class="list-group-item">
              <span>${table.name}</span>
              <div class="mt-2">
                <a href="#" class="btn btn-primary btn-sm table-browse" data-table="${table.name}">Browse</a>
                <a href="#" class="btn btn-secondary btn-sm table-details" data-table="${table.name}">Details</a>
              </div>
            </li>
          `);
        });
      }
    });
  
    // Unbind previous handlers and bind "Browse" click handler
    $('#tableList').off('click', '.table-browse').on('click', '.table-browse', function (e) {
      e.preventDefault();
      const tableName = $(this).data('table');
      loadBrowseView(tableName);
    });
  
    // Unbind previous handlers and bind "Details" click handler
    $('#tableList').off('click', '.table-details').on('click', '.table-details', function (e) {
      e.preventDefault();
      const tableName = $(this).data('table');
      loadTableDetails(tableName);
    });
  });
  
  // Browse view loader
  function loadBrowseView(tableName) {
    $.get(`/browse/${tableName}`, function (html) {
      $('#mainContent').html(html); // Update main content
    }).fail(function () {
      $('#mainContent').html('<p>Error loading browse view.</p>');
    });
  }
  
  // Details view loader
  function loadTableDetails(tableName) {
    $.get(`/table/${tableName}`, function (html) {
      $('#mainContent').html(html); // Update main content
    }).fail(function () {
      $('#mainContent').html('<p>Error loading table details.</p>');
    });
  }
  </script>  

  
</body>
</html>
